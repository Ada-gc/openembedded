DESCRIPTION = "GNU Support Library for gcc 3.x"
SECTION = "libs"
PRIORITY = "required"
DEPENDS = "virtual/libc"
RDEPENDS = "libc6"
PV = "${@os.popen("%s -dumpversion" % oe.data.getVar("CC",d,1)).readline().strip()}"

do_install() {
	install -d ${D}/${libdir}/
	install -m 0755 `${CC} -print-file-name=libgcc_s.so` ${D}/${libdir}/
}

