DESCRIPTION = "Core packages required for a basic installation"
MAINTAINER = "Phil Blundell <pb@handhelds.org>"
PR = "r5"

ALLOW_EMPTY = 1
PACKAGES = "${PN}"

DEPENDS = 'base-files base-passwd-3.5.7 \
	busybox dropbear hotplug ipkg ipkg-link initscripts modutils netbase \
	resolvconf sysvinit tinylogin putty lrzsz portmap \
	modutils-initscripts \
	${BOOTSTRAP_EXTRA_DEPENDS}'

RDEPENDS = 'base-files base-passwd busybox \
	hotplug ipkg ipkg-link initscripts modutils-depmod modutils-modinfo \
	netbase resolvconf sysvinit tinylogin \
	modutils-initscripts \
	${BOOTSTRAP_EXTRA_RDEPENDS}'

RRECOMMENDS = 'dropbear lrzsz putty portmap \
	${BOOTSTRAP_EXTRA_RRECOMMENDS}'
