DESCRIPTION = "A sophisticated network protocol dumper"
SECTION = "base"
PRIORITY = "optional"
DEPENDS = "libpcap-0.8.1"

SRC_URI = "http://www.tcpdump.org/release/tcpdump-${PV}.tar.gz"
