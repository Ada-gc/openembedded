SRC_URI = "${HANDHELDS_CVS};module=apps/atd;tag=ATD-0_70"
S = "${WORKDIR}/atd"
SECTION = "base"
LICENSE = "GPLV2"
inherit update-rc.d

INITSCRIPT_NAME = "atd"
INITSCRIPT_PARAMS = "defaults 97"

do_compile() {
	oe_runmake
}

do_install() {
	install -d ${D}${sbindir}
	install atd ${D}${sbindir}/atd
	install -d ${D}/etc/init.d
	install dist/etc/init.d/atd ${D}/etc/init.d/atd
}

