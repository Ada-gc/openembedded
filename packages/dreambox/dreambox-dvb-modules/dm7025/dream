#!/bin/sh

usage()
{
	echo "Usage: $0 {start|stop|status|restart|reload}"
}

if [ $# -lt 1 ] ; then usage ; break ; fi
action=$1

case "$action" in

start)
	echo -n "Start Dreambox DVB Subsystem:"
	
	echo -n "[xilleon] "
	modprobe xilleon
	echo -n "[avs] "
	modprobe avs
	echo -n "[lcd] "
	modprobe lcd
	echo -n "[fp] "
	modprobe fp
	echo -n "[dreambox_rc2]"
	modprobe dreambox_rc2
	echo " done!"
	
	# redisplay bootlogo, either the "wait..." or the normal
	[ -e /etc/dropbear/dropbear_rsa_host_key ] && /usr/bin/showiframe /boot/bootlogo.mvi || /usr/bin/showiframe /boot/bootlogo_wait.mvi
		;;

stop)
	;;

status)
	;;

restart|reload)
	$0 stop
	$0 start
	;;

*)
	usage
	;;

esac

exit 0
