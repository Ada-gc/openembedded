+    ( *optype ) = 1;
+
+    //if ( control.lastOp() != W100Control::POLYLINE &&
+    //control.lastOp() != W100Control::DRAWLINE ) {
+
+    W100_SetDstType( DSTTYPE_16BPP_1555 );
