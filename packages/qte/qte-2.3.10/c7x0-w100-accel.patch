+
+    GFX_START( clipbounds );
+    W100_SetFrgColour( this->cpen.color().rgb() );
+    W100_SetRopOperation( ROP3_PATCOPY );
+    for ( int loopc = 0; loopc < this->ncliprect; loopc++ ) {
