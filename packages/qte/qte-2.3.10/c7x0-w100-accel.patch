+        control.addMiss( W100Control::POLYLINE );
+        QGfxRaster<depth,type>::drawPolyline( a, index, npoints );
+        return;
+    }
+
+    QWSDisplay::grab( TRUE );
+    if ( !checkDest() ) {
+        QWSDisplay::ungrab();
+        control.addMiss( W100Control::POLYLINE );
+        QGfxRaster<depth,type>::drawPolyline( a, index, npoints );
+        return;
+    }
