+template <const int depth, const int type>
+void QGfxW100<depth,type>::dTiledBlt( int rx,int ry, int w,int h )
+{
+    if ( this->srcwidth == 0 || this->srcheight == 0 )
+        return;
+    QGfxRaster<depth,type>::tiledBlt( rx, ry, w, h );
+}
