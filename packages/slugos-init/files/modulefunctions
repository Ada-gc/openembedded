#!/bin/sh
# . this file to load the functions for automatically loading modules

. /etc/default/functions

loaddiskmods(){
	case "$(machine)" in
	    nslu2)                     
	        modprobe ohci-hcd
		;;
            nas100d)
                modprobe pata-artop
                modprobe uhci-hcd
                ;;
            dsmg600)
                modprobe pata-artop
                modprobe uhci-hcd
                ;;

	esac
}

loadnetmods(){
	case "$(machine)" in
            dsmg600)
                modprobe via-velocity
                ;;
	    *)
		true
		;;
	esac
}

loadmiscmods(){
	true
}

