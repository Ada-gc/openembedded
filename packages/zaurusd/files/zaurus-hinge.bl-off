#${ZD_BINDIR}/bl off


STEP=5
DRIVER="`ls /sys/class/backlight/|head -n 1`"
BRIGHTNESS_FILE="/sys/class/backlight/$DRIVER/brightness"

cat "$BRIGHTNESS_FILE" > /var/run/display_brightness.tmp
echo 0 > "$BRIGHTNESS_FILE"
