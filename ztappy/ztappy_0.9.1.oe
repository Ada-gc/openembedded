DESCRIPTION = "Puzzle Game for Opie/Qtopia"
SECTION = "base"
PRIORITY = "optional"
MAINTAINER = "Michael Lauer <mickey@Vanille.de>"
LICENSE = "GPL"
RDEPENDS = "libqpe1"
DEPENDS = "virtual/libc virtual/libqpe"

SRC_URI = "http://user.cs.tu-berlin.de/~karlb/ztappy/ztappy.tar.gz"
S = "${WORKDIR}/ztappy"

inherit palmtop

do_install() {
        install -m 0755 ${PN} ${S}/ipk/opt/QtPalmtop/bin/${PN}
	install -d ${D}/opt/QtPalmtop
        cp -a ipk/opt/* ${D}/opt
}

