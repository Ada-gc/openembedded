DESCRIPTION="binutils 2.13 from FSF"

LICENSE="GPL"
RDEPEND=""
DEPEND=""
PROVIDES="virtual/${ARCH}-${OS}-binutils"

SRC_URI="${GNU_MIRROR}/binutils/binutils-${PV}.tar.gz"
S = ${WORKDIR}/binutils-${PV}

OLDOS := ${OS}
OLDARCH := ${ARCH}
CROSS_DIR := ${CROSS_DIR}
inherit noncross autotools

do_configure() {
	./configure --prefix=${CROSS_DIR} --target=${OLDARCH}-${OLDOS}
}

EXTRA_OEMAKE =
do_compile() {
	oe_runmake
}

do_install() {
	oe_runmake install
}
