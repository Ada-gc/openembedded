SRC_URI = http://tinylogin.busybox.net/downloads/${P}.tar.bz2
S = ${WORKDIR}/${P}

EXTRA_OEMAKE =

do_compile () {
	oe_runmake 'CC=${CC}' 'CROSS=${CROSS}'
}

do_install () {
	install -d ${D}/bin
	install -m 4755 tinylogin ${D}/bin/tinylogin
	for i in `cat tinylogin.links`; do
		mkdir -p ${D}/`dirname $i`
		ln -sf /bin/tinylogin ${D}/$i
	done
}
