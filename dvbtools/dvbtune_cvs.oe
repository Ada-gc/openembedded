PV = "0.0cvs${CVSDATE}"
SECTION = "dvb"
PRIORITY = "optional"
MAINTAINER = "Phil Blundell <pb@debian.org>"
DEPENDS = "libxml2"
SRC_URI = "cvs://anonymous@cvs.sourceforge.net/cvsroot/dvbtools;module=dvbtune"
S = "${WORKDIR}/dvbtune"

do_compile() {
	make dvbtune xml2vdr
}

do_install() {
	mkdir -p ${D}/${bindir}
	install -m 0755 dvbtune ${D}/${bindir}/
	install -m 0755 xml2vdr ${D}/${bindir}/
}
